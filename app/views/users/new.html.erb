<% provide :title, t(".sign_up") %>
<h1><%=  t(".sign_up") %></h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <div class="field">
        <%= render "shared/error_messages" %>
      </div>
      <div class="field">
        <%= f.label :name, t(".name"), class: "text-info" %>
        <%= f.text_field :name, placeholder: t(".name"), class: "form-control" %>
      </div> 
      <div class="field mt-3">
        <%= f.label :email, t(".email"), class: "text-info" %>
        <%= f.email_field :email, placeholder: t(".email"), class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password, t(".password"), class: "text-info" %>
        <%= f.password_field :password, placeholder: t(".password"), 
         class: "form-control" %>
      </div>  
      <div class="field mt-3">
        <%= f.label :password_confirmation, t(".confirmation"),
          class: "text-info" %>
        <%= f.password_field :password_confirmation, 
          placeholder: t(".confirmation"), class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.submit t(".create_my_account"),
          class: "btn btn-outline-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
