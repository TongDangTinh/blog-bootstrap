<% provide :title, t(".edit_user") %> 
<h2><%= t(".update_your_profile") %></h2>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <div class="field">
        <%= f.label :name, class: "text-info" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :email, class: "text-info" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password, class: "text-info" %>
        <%= f.password_field :password, placeholder: "New password",
          class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password_confirmation, "Confirmation", 
          class: "text-info" %>
        <%= f.password_field :password_confirmation, 
          placeholder: "Confirm password", class: "form-control" %>
      </div>  
      <div class="field mt-3">
        <%= f.submit t(".update"), class: "btn btn-outline-primary form-control" %>
      </div>
    <% end %>
    <div class="gravatar_edit mt-5">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" 
        class="text-light bg-dark"><%= t(".change") %>
      </a>
    </div>
  </div>
</div>
