<% provide :title, "all users" %>
<div class="row">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do  |user, i| %>
        <tr>
          <th scope="row"> <%= i + 1 %></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
