<% provide :title, t(".edit_user") %>
<h1><%= t(".update_your_profile") %></h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "admin/shared/error_messages" %>
      <div class="field">
        <%= f.label :name, t(".name"), class: "text-info" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :email, t(".email"), class: "text-info" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password, t(".new_password"), class: "text-info" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password_confirmation, t(".confirmation"), 
          class: "text-info" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="field mt-3">
        <%= f.submit t(".update"), 
          class: "btn btn-outline-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
