<% if @user.errors.any? %>
  <div class="row">
    <div class="col-md-9 offset-md-2">
        The form contains <%= pluralize(@user.errors.count, "error") %>.
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="text-danger"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
